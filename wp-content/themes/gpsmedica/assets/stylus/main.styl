@import "nib"
@import "normalize.styl"
@import "icons.styl"



verde = #92BF4F
turquesa = #13AFA4
turquesa2 = #66BB9A
azul = #0000e1
celeste = #3c8dbc
gris = #777777
gris2 = #a1a0a0
naranja = #ff9900
secondary = #F0EAD2

*
	box-sizing border-box
*
	&:after
	&:before
		box-sizing border-box


body
	font-family 'Lato', serif
	font-size 100%
	line-height 30px
	background #FFF
	color #000//gris2

ul
	margin 0
	padding 0
	

a
	text-decoration none
	transition all .5s ease
	color celeste
	

h1
h2
h3
h4
h5
	margin-top 0
	font-weight 900
h1
	line-height 45px

img
	max-width 100%
	height auto
input[type="text"]
input[type="email"]
input[type="number"]
select
textarea
	width 100%
	height 32px
textarea
	height 90px
.select2-container--default .select2-selection--single
.select2-container--default .select2-selection--multiple
	border-radius 0 !important
	min-height 36px !important
.select2-container
	width 100% !important

.select2-container--default .select2-selection--multiple .select2-selection__choice
	margin-top 1px !important
	background-color verde2 !important
	color white

.txt-center
	text-align center

.hidden
	display none 
.no-padding
	padding-left 0 !important
	padding-right 0 !important

	
.btn
.wpcf7-submit
	padding .5rem .8rem
	display inline-block
	color white
	transition all .5s ease
	background-color turquesa
	
	&:hover
		background-color turquesa2
		color white

.wpcf7-submit
	border none
	background-color verde
	&:hover
		background-color verde2
		color white
.inner
	max-width 990px
	margin 0 auto
	position relative
	padding-left 2rem
	padding-right 2rem

.header
	position: relative;
	background-color: turquesa
	padding: 0 20px;
	height: 98px;
	width: 100%;
	border-bottom: 1px solid #d9d9d9;
	border-color: rgba(0,0,0,0.09);
	z-index: 999;
	&-logo 
		display inline-block
		width 80px
	&-menu 
		display: none;
		position: absolute;
		top: 97px;
		left: 0;
		right: 0;
		background-color: turquesa2;
		text-align center
		li 
			display block
		a 
			display block
			color rgba(white,.9)
			padding 1rem
			text-transform uppercase 
		#menu-item-10
			a 
				//background-color turquesa2
				border 2px solid secondary
	&-btn-menu
		position absolute
		right 1rem
		background-color transparent
		border none 
		color white
		font-size 2rem
		top 20px
		outline none
	
	
@media screen and (min-width:768px)
	.header
		
		&-btn-menu
			display none
		&-menu
			display: block !important;
			float: right;
			position: static;
			//line-height: 80px;
			background-color transparent
			text-align left
			margin-top 1.5rem
			ul 
				display flex
				flex-wrap wrap 
				justify-content space-between
			li 
				position relative
			a 
				display block
				padding .5rem .8rem
				&:hover 
					color rgba(white,1)
			.sub-menu
				display: none
				position: absolute
				background-color: turquesa2
				li
					border-bottom: 1px solid secondary
					width: 100%
				a
					display: block
					


	
.banner
	width 100%
	height 35vh
	position relative
	background-color white

	&-functions
		display flex
		flex-wrap wrap
		justify-content space-around
		position absolute
		z-index 22
		bottom 0
		left 0
		right 0
		display none
		&-item 
			width 200px
			height 170px
			text-align center
			overflow hidden

			&:focus
				outline: 0;
			&:hover

				span
					background-color secondary
					color turquesa
				.banner-functions-item-img
					transform translate(0, 0%)
					
			&-img 
				background-size cover
				background-repeat no-repeat
				background-position center center
				height 140px
				transform translate(0, 125%)
				transition all .5s ease
			span
				display block
				background-color turquesa2
				color white
	.item 
		background-size cover
		background-repeat no-repeat
		background-position center center
		height 35vh
		width 100%
		//position relative
		&:before
			content: ''
			background: rgba(0,0,0,.1)
			position: absolute
			left 0
			right: 0
			top 0
			bottom: 0
			width: 100%
			height: 100%
		a 
			position absolute
			top 0
			bottom 0
			right 0
			left 0
			display block
			width 100%
			height 100%
			z-index 22
			
		&-info
			position absolute
			padding 1rem
			color white
			top 30%
			left 50%
			transform translate(-50%, -50%)
			font-size 12px
			text-align center
			width 100%
			
			
			
			h2
				font-size 1.5rem
				margin 24px 0
				font-weight 900
				text-transform uppercase
				line-height 1em
				position relative
				text-shadow: 1px 1px 2px rgba(0,0,0,.5)
				//background-color rgba(0,0,0,.5)
				
				
				
			p
				font-size 1rem
				font-weight 500
				font-style italic
				text-shadow: 1px 1px 1px rgba(0,0,0,.5)
				//background-color rgba(0,0,0,.5)

				
						
			
	img 
		display block
		width 100%
	.owl-dots
		display none
		text-align center
		position absolute
		left 0
		right 0
		bottom -40px
		z-index 901
		.owl-dot
			display inline-block
			&.active
				span
					background-color turquesa2
			span
				width 10px
				height 10px
				margin 5px 7px
				background transparent
				border 2px solid turquesa2
				display block
				border-radius: 30px
	
		
	.owl-prev
	.owl-next
		display none
		position absolute
		top 50%
		transform translate(0, -50%)
		font-family: 'av' !important;
		color white
		font-size 3rem
		z-index	902
			
	.owl-prev
		left 1rem
		&:before
			content: "\f104";
			opacity 1
	.owl-next
		right 1rem
		&:before
			content: "\f105";
			opacity 1
	
			
		
@media screen and (min-width: 830px)
	.banner
		height 75vh
		&-functions
			display flex
		.item 
			height 75vh
			&-info
				display block
				top 30%
				left 50%
				padding-top 0
				padding-left 0
				width 70%
				transform translate(-50%, -50%)
				//font-size 32px
				text-align center
				padding 1rem
				h2
					font-size 5.5em
					margin 25px 0
					
				p
					font-size 1.5rem
					
		&.banner-page
			height 400px;
			.item
				height 400px;
				&-info
					top 70%
					left auto
					max-width 600px
		.owl-dots			
		.owl-prev
		.owl-next
			display block
@media screen and (min-width: 1290px)
	.banner
		&-functions
			&-item 
				width 320px
@media screen and (min-width: 1400px)
	.banner
		height 61vh
		.item 
			height 61vh

